

    <div class="flash_message">
        <div class="flash_bad">
          <% if flash[:bid_message].present? %>
            <%= flash[:bid_message] %>
          <% end %>
          <% if flash[:currency_message].present? %>
            <%= flash[:currency_message] %>
          <% end %>
        </div>
        <div class="flash_win">
          <% if flash[:win_message].present? %>
            <%= flash[:win_message] %>
          <% end %>
        </div>
      </div>
   
   
  
  
  <% if @current_user.present? && @current_user.id == @work.user_id %>
  <a><%= link_to 'Edit', edit_work_path(@work.id) %></a>
  |
  <a></a><%= link_to 'Delete', work_path(@work.id), method: 'delete' %></a>
  <% end %>

<div class="work-page">
    <div class="left">
      <%= cl_image_tag @work.picture, alt: @work.name, class: 'show-nft' %>
    <h3 class="heading-center"> Genres</h3>   
    <div class="genre">
      <% @work.genres.each do |genre| %> 
      <br>
      <div class="gen-item">
      <a><%= link_to genre.name, genre_path(genre.id) %> 
      </div>
      <% end %> 
    </div>
    <h3 class="heading-center">Properties</h3>
    <div class="properties">
      <br>
      <% @work.properties.each do |property| %>
        <div class="trait">
            <%= property.trait %>
            <br>
            <%= property.trait_value %>
            <br>
            <strong>Rarity</strong>
          <strong><%= property.percentage %>%</strong>
        </div>
         <br>
      <% end %>
    </div>
  </div>

  <div class="right">
    <div class="work_info">
      <h2 class="heading"><em><%= @work.name %></em></h2>

        <div class="collector-info">
          <%= link_to user_path(@work.user.id) do %>
            <div class="owner"> 
              <h4 class="info-h">Owner</h4>
              <%= @work.user.name %> 
            </div>
          <% end %>
          <div class="artist">
            <h4 class="info-h">Creator</h4>
            <%= @work.artist%>
          </div>
        </div>
          <div class="show-des">
            <br>
            <%= @work.description %>
          </div>
          <br>
          <div class="token">
            <div class="price">
            <h4>Price</h4>
            <%= @work.price %> <%= @work.currency %>
            </div>
            <div class="block">
            <h4>Blockchain</h4>
            <%= @work.blockchain %>
            </div>
            <div class="token-id">
            <h4>Token id</h4>
            <%= @work.token_id %>
            </div>
        </div>
    <table class="table">
      <br>
      <tr>
      <th>Bid</th>
      <th>Blockchain</th>
      <th>User</th>
      <th>Date</th>
      </tr>
      <tr>
      <% @work.bids.last(5).each do |i| %>
      <td><%=" #{i.price}" %></td>
      <td><%=" #{i.blockchain}" %></td>
      <td><%="u-id #{i.user_id}" %></td>
      <td><%=" #{i.created_at.strftime '%d/%m/%Y'}" %></td>
      </tr>
      <% end %>
      <tr>
      <div class="form">
      <% if @current_user.present? %>
      <%= form_with model: @bid, local: true  do |f| %>
      <td><%= f.text_field :price, string: "Add" %></td> 
      <br>
      <td><%= f.text_field :currency %></td>
      <br>
      <td><%= f.hidden_field :user_id, value: @current_user.id %></td>
       <td><%= f.hidden_field :created_at%></td>
       <td><%= f.submit %></td>
      </tr>
        <% end %>
      <% end %>
    </table>
   </div>
  </div>
</div>