<div class="form-create">
<%= form_with model: @work, local: true, html: {multipart: true} do |f| %>
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
      <br><br>
      
      <%= f.label :description %>
      <br>
      <%= f.text_field :description %>
      <br><br>
      
      <%= f.label :artist %>
      <br>
      <%= f.text_field :artist %>
      <br><br>
      
      <%= f.label :token_id %>
      <br>
      <%= f.text_field :token_id %>
      <br><br>

      <%= f.label :blockchain %>
      <br>
      <%= f.text_field :blockchain %>
      <br><br>

      <%= f.label :price %>
      <br>
      <%= f.text_field :price %>
      <br><br>
      
      <%= f.label :currency %>
      <br>
      <%= f.text_field :currency %>
      <br><br>
      <%# <%= f.label :user_id %>
      <%# <br> %>
      <%# <%= f.text_field :user_id %> 
      <br><br>
      <%= f.label :property_id %>
      <br>
      <%= f.text_field :property_id %>
      <br><br>
      <%= f.label :picture, 'NFT URL' %>
      <br>
      <%= f.file_field :picture %>
      <br><br>
      <strong>Genre</strong>
      <br>
        <% Genre.all.each do |genre| %>
            <%= check_box_tag 'genre_ids[]', genre.id%>
            <%= genre.name %>
        <% end %>
      <br><br>
      <strong>Property</strong>
          <br>
          <%= label_tag :trait %>
          <br>
          <%= text_field_tag :trait %>
          <br>
          <%= label_tag :trait_value %>
          <br>
          <%= text_field_tag :trait_value %>
          <br>
          <%= label_tag :percentage %>
          <br>
          <%= text_field_tag :percentage %>
       <br><br>
      <strong>Property</strong>
          <br>
          <%= label_tag :trait1 %>
          <br>
          <%= text_field_tag :trait1 %>
          <br>
          <%= label_tag :trait_value1 %>
          <br>
          <%= text_field_tag :trait_value1 %>
          <br>
          <%= label_tag :percentage1 %>
          <br>
          <%= text_field_tag :percentage1 %>
          <br><br>
  <%= f.submit %>
<% end %>
</div>