<!DOCTYPE html>
<html>
  <head>
    <title>Project1 NFT App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav>
  <nav>
    <h1> NFT MarktPlace</h1>
    <br>
     <br>
    <% if @current_user.present? %>
    Welcome, <%= @current_user.name %>
    <%= link_to 'LogOut', login_path, method:'delete'%>
    |
    <%= link_to 'Edit Account', edit_user_path(@current_user.id)%>
    <% else %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    |
    <%= link_to 'Home', root_path %>
    |
    <%= link_to 'All NTFs', works_path %>
    |
    <%= link_to 'Post NTF', new_work_path %>
    |
    <%= link_to 'Seller Collections', users_path %>
    |
    <%= link_to 'Genres', genres_path %>
    <hr>
  </nav>

    <footer>
   
    <%= yield %>
      <hr>
      &copy; Secure & Private Blockchain for NFT's
     </footer>
  </body>
</html>
