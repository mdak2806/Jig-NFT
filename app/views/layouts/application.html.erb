<!DOCTYPE html>
<html>
  <head>
    <title>Project1 NFT App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
  <nav>
  <header>
   <br>
     <div class="login">
          <% if @current_user.present? %>
            Welcome, <%= @current_user.name %>
            |2
            <%= link_to 'LogOut', login_path, method:'delete'%>
            |
            <%= link_to 'Edit Account', edit_user_path(@current_user.id)%>
            <% else %>
            <%= link_to 'Login', login_path %>
            |
            <%= link_to 'Sign Up', new_user_path %>
          <% end %>
        </div>
  </header>
    <h1 class="page-header"> JIG NFT </h1>
        <div class="nav">
          <%= link_to 'Home', root_path %>
          |
          <%= link_to 'Explore', works_path %>
          |
          <%= link_to 'Create', new_work_path %>
          |
          <%= link_to 'Collections', users_path %>
          |
          <%= link_to 'Genres', genres_path %>
    </div>
    <hr>
  </nav>
    <%= yield %>
    <footer>
   
   
      <hr>
      &copy; Secure & Private Blockchain for NFT's
     </footer>
  </body>
</html>
